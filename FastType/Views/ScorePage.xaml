<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FastType"
    xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
    x:Class="FastType.ScorePage"
    BarBackgroundColor="{ DynamicResource BackgroundSecondaryColor }"
    UnselectedTabColor="{ DynamicResource TextTertiaryColor }"
    SelectedTabColor="{ DynamicResource PrimaryColor }"
    android:TabbedPage.ToolbarPlacement="Bottom"
    android:TabbedPage.IsSwipePagingEnabled="False"
    Title="News Feed">
    <TabbedPage.ToolbarItems>
        <ToolbarItem Clicked="OnProfileTapped">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="{ StaticResource NewsIconsFontFamily }"
                    Glyph="{ x:Static local:MaterialCommunityIconsFont.Account }"
                    Color="Black"
                    Size="24"
                />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </TabbedPage.ToolbarItems>

    <!-- Pages -->
    <local:NewsListPage />
    <local:NewsTopicsPage />
    <local:NewsSourcesPage />
</TabbedPage>
